<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <ImageView
        android:id="@+id/imageViewMyFeedback"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_header_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:textColor="#000"
        android:layout_marginLeft="20dp"
        android:id="@+id/textViewTitleMyFeedback"
        android:layout_alignTop="@+id/imageViewMyFeedback"
        android:layout_toRightOf="@+id/imageViewMyFeedback"
        android:layout_toLeftOf="@+id/textViewCreatedMyFeedback"
        android:layout_toStartOf="@+id/textViewCreatedMyFeedback" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:layout_marginTop="10dp"
        android:id="@+id/textViewDescMyFeedback"
        android:layout_below="@+id/textViewTitleMyFeedback"
        android:layout_alignLeft="@+id/textViewTitleMyFeedback"
        android:layout_alignStart="@+id/textViewTitleMyFeedback" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textViewCreatedMyFeedback"
        android:layout_alignBottom="@+id/textViewTitleMyFeedback"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>